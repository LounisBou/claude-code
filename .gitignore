# Ignore claude local settings
settings.local.json

# Project-specific config (each project customizes this)
# Located in .claude/project.json
.claude/project.json

# Target directories (symlinks only, git ignored)
# Claude scans these directories - we create symlinks here from *-available/
skills/
agents/
commands/

# Keep directory structure even if empty
!skills/.gitkeep
!agents/.gitkeep
!commands/.gitkeep

# BUT keep init-project.md (must exist for /init-project to work - it can't create itself)
!commands/init-project.md

# Source files in *-available/ directories are tracked
# These are NOT scanned by Claude (only skills/, agents/, commands/ are)

# Local project-specific additions (git ignored except .gitkeep)
skills-available/local/*
agents-available/local/*
!skills-available/local/.gitkeep
!agents-available/local/.gitkeep

{
  "description": "Agent invocation test definitions - ALL agents from agents-available/",
  "tests": [
    {
      "agent": "api-designer",
      "category": "api",
      "triggers": ["design API", "REST API", "GraphQL", "API endpoints", "API architecture"],
      "test_prompts": [
        "Design a REST API for user management",
        "How should I structure the API endpoints for this feature?",
        "Create an OpenAPI spec for the blog API"
      ],
      "should_not_trigger": [
        "Fix a bug in the API",
        "Write implementation code"
      ]
    },
    {
      "agent": "code-norms-checker",
      "category": "dev",
      "triggers": ["check patterns", "follow conventions", "consistent with codebase", "norms check", "check coding standards"],
      "test_prompts": [
        "Check patterns in src/services/ - is this consistent with codebase?",
        "Run a norms check on my recent changes",
        "Does this follow conventions used elsewhere in the project?"
      ],
      "should_not_trigger": [
        "Write new code",
        "Fix this bug"
      ]
    },
    {
      "agent": "code-review",
      "category": "dev",
      "triggers": ["review my code", "code review", "check this code", "security audit", "ready for production"],
      "test_prompts": [
        "Code review my changes before I commit",
        "Review my code in src/auth/ for security issues",
        "Is this ready for production? Please review before merge"
      ],
      "should_not_trigger": [
        "Write a new function",
        "Fix this bug"
      ]
    },
    {
      "agent": "debugging-assistant",
      "category": "dev",
      "triggers": ["error message", "stack trace", "not working", "broken", "fails", "crashes", "bug", "why is X happening"],
      "test_prompts": [
        "Error: TypeError: Cannot read property 'map' of undefined at src/App.js:42",
        "This function is not working - it returns undefined instead of the array",
        "My app crashes with this stack trace: Error at line 15"
      ],
      "should_not_trigger": [
        "Add a new login feature",
        "Review this code for me"
      ]
    },
    {
      "agent": "dependency-auditor",
      "category": "dev",
      "triggers": ["audit dependencies", "check for vulnerabilities", "outdated packages", "npm audit", "pip audit", "composer audit"],
      "test_prompts": [
        "Audit dependencies for security vulnerabilities",
        "Run npm audit and check for outdated packages",
        "Check deps before deploy - any vulnerabilities?"
      ],
      "should_not_trigger": [
        "Install a new package",
        "Write some code"
      ]
    },
    {
      "agent": "migration-planner",
      "category": "dev",
      "triggers": ["upgrade from X to Y", "migrate to", "migration plan", "what will break if we upgrade", "breaking changes in version"],
      "test_prompts": [
        "Help me upgrade from Vue 2 to Vue 3 - create a migration plan",
        "What will break if we upgrade React to v18?",
        "Migrate to Python 3.12 - what are the breaking changes?"
      ],
      "should_not_trigger": [
        "Write new code",
        "Fix a bug"
      ]
    },
    {
      "agent": "refactoring-advisor",
      "category": "dev",
      "triggers": ["refactor this", "clean up this code", "simplify this", "too complex", "technical debt", "code smells", "this class is too big"],
      "test_prompts": [
        "Refactor this UserService class - it's too big",
        "Clean up this code in src/utils/ - too complex",
        "Identify code smells and technical debt in this module"
      ],
      "should_not_trigger": [
        "Add a new feature",
        "Fix this specific bug"
      ]
    },
    {
      "agent": "test-generator",
      "category": "dev",
      "triggers": ["write tests", "generate tests", "add tests", "need tests for", "create tests", "test coverage"],
      "test_prompts": [
        "Write tests for the UserService class",
        "Generate tests for src/auth/login.js",
        "Add tests for this module - need better coverage"
      ],
      "should_not_trigger": [
        "Fix this failing test",
        "Why is this test failing?"
      ]
    },
    {
      "agent": "docstring-generator",
      "category": "docs",
      "triggers": ["add docstring", "generate docstring", "add JSDoc", "add TSDoc", "add PHPDoc", "document this function"],
      "test_prompts": [
        "Add docstring to the createUser function",
        "Generate JSDoc for the functions in api.js",
        "Add PHPDoc to this class and its methods"
      ],
      "should_not_trigger": [
        "Write new code",
        "Fix a bug"
      ]
    },
    {
      "agent": "documentation-generator",
      "category": "docs",
      "triggers": ["create README", "generate README", "write documentation", "API documentation", "document this project"],
      "test_prompts": [
        "Create README for this project",
        "Generate API documentation for the REST endpoints",
        "Write documentation for this project architecture"
      ],
      "should_not_trigger": [
        "Write code",
        "Fix a bug"
      ]
    },
    {
      "agent": "laravel-developer",
      "category": "laravel",
      "triggers": ["Laravel", "Eloquent", "Laravel artisan", "Laravel blade"],
      "test_prompts": [
        "Help me create a Laravel controller",
        "How do I set up Eloquent relationships?",
        "Create a Laravel migration for this table"
      ],
      "should_not_trigger": [
        "Write Python code",
        "Create a Vue component"
      ]
    },
    {
      "agent": "async-api-specialist",
      "category": "python",
      "triggers": ["async API", "asyncio API", "async Python backend"],
      "test_prompts": [
        "Help me build an async Python API",
        "How do I handle async database calls in my API?"
      ],
      "should_not_trigger": [
        "Write synchronous code",
        "Create a frontend"
      ]
    },
    {
      "agent": "python-api-developer",
      "category": "python",
      "triggers": ["Python API", "FastAPI", "Flask API", "Django REST"],
      "test_prompts": [
        "Help me create a Python REST API",
        "Build a FastAPI endpoint for user management"
      ],
      "should_not_trigger": [
        "Write PHP code",
        "Create Vue components"
      ]
    },
    {
      "agent": "api-platform-architect",
      "category": "symfony",
      "triggers": ["API Platform", "Symfony API", "API Platform architecture"],
      "test_prompts": [
        "Help me architect an API Platform project",
        "Design the API Platform resource structure"
      ],
      "should_not_trigger": [
        "Write Laravel code",
        "Create a frontend"
      ]
    },
    {
      "agent": "doctrine-specialist",
      "category": "symfony",
      "triggers": ["Doctrine ORM", "Doctrine entities", "Doctrine queries"],
      "test_prompts": [
        "Help me with Doctrine entity relationships",
        "Optimize this Doctrine query"
      ],
      "should_not_trigger": [
        "Write Eloquent code",
        "Create JavaScript"
      ]
    },
    {
      "agent": "vuejs-developer",
      "category": "vue",
      "triggers": ["Vue component", "Vue.js", "Composition API", "Vue template", "Vue SFC"],
      "test_prompts": [
        "Create a Vue component for user profile",
        "Fix the reactivity in this Vue component",
        "Convert this to Composition API"
      ],
      "should_not_trigger": [
        "Write a Python script",
        "Create a REST API"
      ]
    }
  ]
}

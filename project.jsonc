{
  // Project Profile Configuration
  // =============================
  // Copy this file to project.json and customize for your project.
  // Run /init-project to build symlinks based on this config.
  //
  // See CATEGORIES.md for full list of available categories.

  // Project name (for display purposes)
  "name": "my-project",

  // Categories to include
  // ---------------------
  // Add categories based on your project's tech stack.
  // "dev" is recommended for all projects.
  //
  // Core:     dev, claude, mcp, docs, api
  // Language: php, python, js, ts, html
  // Framework: symfony, laravel, vue, tailwind
  "categories": [
    "dev",        // Generic development tools (always recommended)
    "php",        // PHP language support
    "symfony"     // Symfony framework support
  ],

  // Exclude specific items (optional)
  // ---------------------------------
  // Fine-grained control to exclude specific skills/agents/commands.
  // Format: "type/name" (e.g., "agents/doctrine-specialist")
  "exclude": [
    // "agents/doctrine-specialist",
    // "skills/php-symfony-doctrine-migrations"
  ],

  // Project description (for documentation)
  "description": "My PHP/Symfony project"
}
